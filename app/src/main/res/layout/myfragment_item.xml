<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <Button
            android:id="@+id/bt_login_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:onClick="login"
            android:textColor="#ff0000"
            />

        <ImageView
            android:id="@+id/iv_my_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />
        <Button
            android:id="@+id/bt_regist_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="注册"
            android:onClick="regist"
            android:textColor="#ff0000"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="我的关注"
            android:onClick="myAttention"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/list_icon_heart_nor"
            />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="我的收藏"
        android:gravity="center_vertical"
        android:onClick="myCollect"
        android:drawableRight="@drawable/list_icon_heart_nor"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="我的评论"
        android:onClick="myComment"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/list_icon_heart_nor"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="设置"
        android:onClick="setting"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/list_icon_heart_nor"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="意见反馈"
        android:gravity="center_vertical"
        android:onClick="feedback"
        android:drawableRight="@drawable/list_icon_heart_nor"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />



</LinearLayout>